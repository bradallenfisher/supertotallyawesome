---
layout: base.njk
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /tags/{{ tag | slug }}/
eleventyComputed:
  title: "Posts tagged with '{{ tag }}'"
---
<h1>{{ title }}</h1>

<p><a href="/tags/" class="back-link">‚Üê View all tags</a></p>

<div class="post-grid">
  {% set taglist = collections[tag] %}
  {% for post in taglist | reverse %}
    <article class="post-card">
      {% if post.data.image %}
        <a href="{{ post.url }}" class="post-image-link">
          <img src="{{ post.data.image }}" alt="{{ post.data.title }}">
        </a>
      {% endif %}
      <h2>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h2>
      <time datetime="{{ post.date | formatDate }}">
        {{ post.date | formatDate }}
      </time>
      {% if post.data.tags %}
        <div class="card-tags">
          {% for posttag in post.data.tags %}
            {% if posttag != "post" and posttag != tag %}
              {% set tagUrl %}/tags/{{ posttag | slug }}/{% endset %}
              <a href="{{ tagUrl }}" class="post-tag">{{ posttag }}</a>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </article>
  {% endfor %}
</div> 